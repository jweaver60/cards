<div class="row">
  <div class="small-12 columns">
    <h1 id="contact">Contact Us</h1>
    <div class="row">
      <div class="small-12 medium-8 columns">
      <% flash.each do |key, value| %>
          <div data-alert class="alert-box <%= key.to_s %>">
            <%= value %>
            <a href="#" class="close">&times;</a>
          </div>
        <% end %>
        <%= form_for @contact, :url => welcome_create_path(@contact) do |f| %>
          <%= f.label :name %><br>
          <%= f.text_field :name, :required => true %>
          <%= f.label :company %><br>
          <%= f.text_field :company, :required => true %>
          <%= f.label :email %><br>
          <%= f.text_field :email, :required => true %>
          <%= f.label :message %><br>
          <%= f.text_area :message, :required => true %>
          <div class="hidden">
            <%= f.text_field :nickname %>
          </div>
          <%= f.submit 'Send message', :class => "button small" %>
        <% end %>
      </div>
      <div class="small-12 medium-4 columns">
        <ul class="vcard">
          <li class="fn">Cards E-Liquid</li>
          <li class="email"><a href="mailto:info@cardseliquid.com">info@cardseliquid.com</a></li>
          <li class="phone-number"><a href="tel:+15133422470">(513) 342-2470</a></li>
        </ul>
      </div>
    </div>
  </div>
</div>
